<configure 
    xmlns="http://namespaces.repoze.org/bfg"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="voteit.core">

<include package="repoze.workflow" file="meta.zcml"/>

	<workflow
		type="Meeting"
		name="Meeting Workflow"
		state_attr="state"
		initial_state="upcoming"
		content_types="voteit.core.models.interfaces.IMeeting"
        permission_checker="pyramid.security.has_permission"
	>

		<state name="upcoming">
			<key name="title" value="Upcoming" i18n:attributes="value" />
			<key name="description" value=""/>
		</state>

		<state name="active">
			<key name="title" value="Active" i18n:attributes="value" />
			<key name="description" value=""/>
		</state>

		<state name="closed">
			<key name="title" value="Closed" i18n:attributes="value" />
			<key name="description" value=""/>
		</state>

		<transition
			name="upcoming_to_active"
			from_state="upcoming"
			to_state="active"
			permission="Edit"
		/>
		
		<transition
			name="upcoming_to_closed"
			from_state="upcoming"
			to_state="closed"
			permission="Edit"
		/>
		
		<transition
			name="active_to_upcoming"
			from_state="active"
			to_state="upcoming"
			permission="Edit"
		/>

		<transition
			name="active_to_closed"
			from_state="active"
			to_state="closed"
			permission="Edit"
            callback="voteit.core.models.meeting.closing_meeting_callback"
		/>
		
		<transition
			name="closed_to_active"
			from_state="closed"
			to_state="active"
			permission="Edit"
		/>
		
	</workflow>

</configure>
