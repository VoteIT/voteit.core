<div xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="voteit.core"
      id="navigation_head">
    <h5 class="header">
        <a href="${url}"
           tal:attributes="class api.meeting and 'meeting_header' or 'root_header'"
           title="${description}">${title}</a>
    </h5>
    <tal:root tal:condition="show_add_meeting">
            <a href="${request.resource_url(api.root, 'add', query={'content_type': 'Meeting'})}"
               class="buttonize small" i18n:translate="">Add</a>
    </tal:root>
    <div tal:condition="api.show_moderator_actions">
        <tal:meeting tal:condition="api.meeting">
            <a href="${request.resource_url(api.meeting, 'add', query={'content_type': 'AgendaItem'})}"
               class="buttonize small" i18n:translate="">Manage agenda</a>
        </tal:meeting>
    </div>
</div>
