<tal:main xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="voteit.core">
<span class="dropdown_menu" id="global-actions-menu">
    <a href="#" class="menu_header">
        <img tal:replace="structure api.user_profile.get_image_tag(size=40, request = request)" />
        <span class="icon userid">
            <span>${api.user_profile.userid}</span>
        </span>
    </a>
    <ul class="menu_body">
        <li><span class="menusection">
            <div i18n:translate="">Logged in as:</div>
            <tal:name tal:content="api.user_profile.title">Fullname</tal:name>
        </span></li>
        <li><a href="${request.resource_url(api.user_profile)}" i18n:translate="">
            Your profile and settings
        </a></li>
        <li><a href="${request.resource_url(api.user_profile, 'change_password')}" i18n:translate="">
            Change password
        </a></li>
        <tal:menuitems content="structure api.render_view_group(context, request, 'global_actions_authenticated')">Menuitems</tal:menuitems>
    </ul>
</span>
</tal:main>
