<tal:main xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="voteit.core">
<div class="tag_stats clear">
	<h4 i18n:translate="">Popular subjects</h4>
	<ul tal:condition="stats">
		<tal:for repeat="(tag, count) stats">
	    <li>
    		<a tal:condition="context.content_type == 'AgendaItem'" href="${make_url(tag)}">#${tag}</a>
    		<tal:notag condition="not context.content_type == 'AgendaItem'">#${tag}</tal:notag>
    		(${api.get_tag_count(tag)})
	    </li>
	    </tal:for>
    </ul>
</div>
</tal:main>
