<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="load: ${api.template_dir}base_edit.pt"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="voteit.core">
<body>
	<div metal:fill-slot="form" class="content_wrapper">
	    <form method="post" class="deform agenda-item-sort">
	    	<tal:states repeat="state states">
	    		<h3 class="iconpadding icon ${state}" tal:content="translated_state_title(state)">State</h3>
	    		<table>
	    			<thead>
	    				<tr>
	    					<td>&nbsp;</td>
	    					<td i18n:translate="">Edit</td>
	    					<td i18n:translate="">Delete</td>
	    					<td i18n:translate="">Proposals enabled</td>
	    					<td i18n:translate="">Discussions enabled</td>
	    					<td i18n:translate="">Agenda item</td>
	    				</tr>
	    			</thead>
	    			<tal:ais repeat="ai ais[state]">
	    				<tr tal:attributes="class repeat.ai.odd and 'odd'" tal:define="obj find_resource(api.root, ai['path'])">
	    					<td>
	    						<input type="checkbox" name="ais" value="${ai['name']}"></input>
	    					</td>
	    					<td><a href="${ai['path']}/edit" class="buttonize edit" i18n:translate="">Edit</a></td>
	    					<td><a href="${ai['path']}/delete" class="delete"><span i18n:translate="">Delete</span></a></td>
	    					<td tal:define="block_state obj.get_field_value('proposal_block', False) and '0' or '1'">
	    						<a href="${request.resource_url(obj, '_toggle_block', query={'proposal_block': block_state})}"
	    							class="class obj.get_field_value('proposal_block', False) and 'disabled' or 'enabled'">
	    							<span>${obj.get_field_value('proposal_block', False) and api.translate('No') or api.translate('Yes')}</span>
	    						</a>
	    					</td>
	    					<td tal:define="block_state obj.get_field_value('discussion_block', False) and '0' or '1'">
	    						<a href="${request.resource_url(obj, '_toggle_block', query={'discussion_block': block_state})}"
	    							class="class obj.get_field_value('discussion_block', False) and 'disabled' or 'enabled'">
	    							<span>${obj.get_field_value('discussion_block', False) and api.translate('No') or api.translate('Yes')}</span>
	    						</a>
	    					</td>
	    					<td><a href="${ai['path']}">${ai['title']}</a></td>
	    				</tr>
	    			</tal:ais>
	    		</table>
	    	</tal:states>
	    	<p>
	    		<label for="state_id" i18n:translate="">Ändra tillstånd på markerade till</label>
	    		<select id="state_id" name="state_id">
	    			<option tal:repeat="state states" value="${state}">${translated_state_title(state)}</option>
	    		</select>
	    		<button class="buttonize" type="submit" name="change" i18n:translate="">Change</button>
	    		<button class="buttonize" type="submit" name="cancel" i18n:translate="">Cancel</button>
	    	</p>
	    </form>
	</div>
</body>
</html>