<span tal:attributes="id 'user_tag_form_'+context_id;"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     i18n:domain="voteit.core">

    <form tal:condition="show_form" method="post" tal:attributes="action toggle_url;" class="user_tag_form inline_form">
        <input name="tag" type="hidden" tal:attributes="value tag" />
        <input name="do" type="hidden" tal:attributes="value do" />
        <input name="display_name" type="hidden" tal:attributes="value display_name" />
        <input name="expl_display_name" type="hidden" tal:attributes="value expl_display_name" />
        <input name="submit" type="submit"
               tal:attributes="value button_label;
                               class selected and 'user_tag_button inline_submit selected' or 'user_tag_button inline_submit';" />
    </form>
    <tal:has_entries condition="has_entries">
        (<tal:you condition="selected" i18n:translate="">You</tal:you>
        <span tal:condition="userids and len(userids) == 1">
            <tal:and condition="selected" i18n:translate="">and</tal:and>
            <span><a href="${get_userinfo_url(userids[0])}"
                     class="inlineinfo"
                     tal:content="userids[0]"></a></span>
        </span>
        <span tal:condition="userids and len(userids) > 1">
            <tal:and condition="selected" i18n:translate="">and</tal:and>
            <a href="${tagging_users_url}" class="moretag" tal:attributes="title ', '.join(userids)">
                <span tal:replace="len(userids)">3</span>
                <span i18n:translate="">people</span>
            </a>
            <tal:more condition="selected" i18n:translate="more_in_likes">more</tal:more>
        </span>
        <span tal:replace="expl_display_name">Like this</span>)
    </tal:has_entries>
    
</span>
