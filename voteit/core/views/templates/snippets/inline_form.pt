<tal:main
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="voteit.core">
    <img tal:replace="structure user_image_tag" />
    <div class="inline_form_placeholder">
        <span tal:replace="structure form">Form</span>
    </div>
    <div class="clear"><!-- --></div>
	<p class="discreet" tal:condition="content_type == 'Proposal'" i18n:translate="">Please note: A proposal is a statement the meeting can approve or deny.</p>
    <p class="discreet">
        <span i18n:translate="">@username is a connection to a user.</span>
        <span i18n:translate="">#word or #proposalID is a connection to a subject or a proposal.</span>
    </p>
<script type="text/javascript">
    deform.processCallbacks();
    deform.focusFirstInput();
</script>
</tal:main>
