<tal:main xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="voteit.core">
<div class="userinfo" class="content_wrapper">

    <tal:user_visible condition="user is not None">
	    <img tal:replace="structure user.get_image_tag(size=100)" />
    	<h4>
	        <span tal:content="user.title">My fullname</span>
	        <span>(${user.userid})</span>
		</h4>

        <p>
    	<h6><span i18n:translate="">Email</span>:</h6>
		<span tal:content="user.get_field_value('email')"></span>
		</p>
	    	<h6><span i18n:translate="">Biography</span>:</h6>
			<div tal:content="structure nl2br(user.get_field_value('biography'))"></div>
	</tal:user_visible>

	<tal:user_not_found condition="user is None">
        <p i18n:translate="">Couldn't find any user with userid <span i18n:name="userid">${info_userid}</span></p>
	</tal:user_not_found>

</div>
</tal:main>
