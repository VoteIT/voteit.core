<tal:main
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="voteit.core">
<div id="meeting_overview">
    <div tal:define="state string:closed;
                     is_closed check_section_closed('%s-%s' % (api.meeting.uid, state));">
        <div metal:use-macro="section_overview_macro">
            <span metal:fill-slot="heading" i18n:translate="">This has happened</span>
        </div>
    </div>
    <div tal:define="state string:ongoing;
                     is_closed check_section_closed('%s-%s' % (api.meeting.uid, state));">
        <div metal:use-macro="section_overview_macro">
            <span metal:fill-slot="heading" i18n:translate="">This is happening now</span>
        </div>
    </div>
    <div tal:define="state string:upcoming;
                     is_closed check_section_closed('%s-%s' % (api.meeting.uid, state));">
        <div metal:use-macro="section_overview_macro">
            <span metal:fill-slot="heading" i18n:translate="">This will happen</span>
        </div>
    </div>
</div>
</tal:main>