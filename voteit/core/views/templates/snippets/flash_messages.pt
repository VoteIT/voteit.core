<tal:main xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="voteit.core">
<div id="flash_messages">
	<tal:iterate repeat="flash messages">
		<div tal:attributes="class 'message %s'.strip() % flash['type']">
			<span tal:content="structure flash['msg']">Message</span>
			<a href="#" title="Close message"
			   class="close_message"
			   tal:condition="flash['close_button']">X</a>
        </div>
	</tal:iterate>
</div>
<div class="clear"><!-- --></div>
</tal:main>
