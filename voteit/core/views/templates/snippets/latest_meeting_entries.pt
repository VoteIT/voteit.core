<tal:main xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="voteit.core">
<div id="latest_meeting_entries"
	 tal:attributes="class closed_section and 'toggle_area toggle_closed block' or 'toggle_area toggle_opened block';">
    <h6 class="toggle_minimize reload"><span i18n:translate="">Latest entries</span></h6>
    <div class="list minimizable_area" tal:condition="not closed_section">
        <tal:iterate repeat="brain last_entries">
            <div class="${brain.content_type.lower()} icon iconpadding">
                <span class="listitem">
                    <a href="${brain.path}" tal:content="structure truncate(brain.title, 100)"></a>
                    <div class="meta">${api.dt_util.relative_time_format(brain.created)}</div>
                </span>
            </div>
        </tal:iterate>
    </div>
    <div class="minimizable_inverted" i18n:translate="">(hidden, click above to open)</div>
</div>
</tal:main>
