<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="load: ${api.template_dir}main.pt"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="voteit.core">
<body>
<div metal:fill-slot="main_window" tal:define="reg_info context.get_field_value('registration_info', u'')">

    <div tal:attributes="id alternative_methods and 'left' or 'content'">
        <tal:form tal:replace="structure form">Main registration method form</tal:form>
    </div>
    <div id="right" tal:condition="alternative_methods">
        <div tal:content="structure reg_info" tal:condition="reg_info">Registration info</div>
        <h4 i18n:translate="">Alternative ways to register</h4>
        <tal:iterate repeat="alt_method alternative_methods">
            <div class="listing_block" tal:content="structure alt_method">Hello</div>
        </tal:iterate>
    </div>
</div>
</body>
</html>
