<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="load: ${api.template_dir}main.pt"
	  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	  i18n:domain="voteit.core">
<body>
    <tal:main_window metal:fill-slot="main_window">
        <div id="top">
            <div class="content_wrapper">
                <div metal:define-slot="page_heading"
                     id="page_heading">
                    <tal:moderator_actions metal:define-slot="action_menu"
                         tal:condition="api.context_has_permission('Moderate Meeting', context)"
                         tal:content="structure api.get_moderator_actions(context)">Cogwheel menu</tal:moderator_actions>
                    <h2 tal:condition="not title|True" tal:content="context.title">Title</h2>
                    <h2 tal:condition="title|False" tal:content="title">Title</h2>

                </div> <!-- page_heading -->
                <div id="top_content" metal:define-slot="top_content"></div>
            </div> <!-- content_wrapper -->
        </div> <!-- top -->

        <div id="content" metal:define-slot="content">
            <div id="left">
               <metal:left define-slot="left"></metal:left>
            </div>
            <div id="right">
               <metal:right define-slot="right"></metal:right>
            </div>
        </div><!-- content -->
    </tal:main_window>
</body>
</html>
