<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="load: ${api.template_dir}main.pt"
	  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	  i18n:domain="voteit.core">
<body>
    <tal:main_window metal:fill-slot="main_window">
        <div id="content">
            <metal:heading define-slot="page_heading">
                <tal:moderator_actions metal:define-slot="action_menu"
                     tal:condition="api.context_has_permission('Moderate Meeting', context)"
                     tal:content="structure api.get_moderator_actions(context)">Cogwheel menu</tal:moderator_actions>
                <h2 tal:content="title|context.title" id="page_heading">Title</h2>
            </metal:heading>
            <metal:top_content metal:define-slot="top_content"></metal:top_content><!-- b/c compat -->
            <metal:content metal:define-slot="content"></metal:content>
        </div>
        <metal:columns metal:define-slot="columns">
            <metal:left metal:define-slot="left"></metal:left>
            <metal:right metal:define-slot="right"></metal:right>
        </metal:columns>
    </tal:main_window>
</body>
</html>
