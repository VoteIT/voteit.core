<tal:main xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="voteit.core">
<div class="listing">
	<div tal:condition="'tag' in request.GET"
	     class="tag-title">
	    <span i18n:translate="">Limited to <span i18n:name="tag_name" tal:content="'#'+request.GET.get('tag', '')"></span></span>
	    <a class="tag" tal:attributes="href clear_tag_url"
	       i18n:translate="">
	        Show
	        <span tal:content="hidden_count" i18n:name="count">5</span>
	        hidden proposals
	    </a>
	    <div class="clear"><!-- --></div>
	</div>
	
	<span tal:replace="structure get_polls(polls)">Render poll listing</span>
		
	<tal:iterate condition="proposals" repeat="proposal proposals">
	    <tal:proposal 
	    	replace="structure api.render_single_view_component(context, request, 'proposal', 'block', brain=proposal)">
	    	Proposal
	    </tal:proposal>	
	</tal:iterate>
</div>
</tal:main>
