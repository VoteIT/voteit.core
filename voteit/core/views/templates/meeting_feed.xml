<?xml version="1.0"?>
<rss version="2.0"
	 xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:tal="http://xml.zope.org/namespaces/tal">
	<channel>
		<title>${api.context.title}</title>
		<link>${api.resource_url(api.context, api.request)}</link>
		<description></description>
		<atom:link href="${api.resource_url(api.context, api.request)}feed" rel="self" type="application/rss+xml" />
		<tal:iterate condition="not closed and active" repeat="entry entries">
	    <item tal:define="url get_url(entry)">
			<title>${entry.message}</title>
			<link>${url}</link>
			<pubDate>${format_date(entry.created)}</pubDate>
			<guid>${url}</guid>
		</item>
		</tal:iterate>
		<item tal:condition="not (not closed and active)">
			<title>${feed_not_active_notice}</title>
			<link>${api.resource_url(api.context, api.request)}</link>
			<pubDate>${format_date(api.dt_util.utcnow())}</pubDate>
			<guid>${api.resource_url(api.context, api.request)}</guid>
		</item>
	</channel>
</rss>