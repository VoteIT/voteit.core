<tal:main 
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="voteit.core">

<div class="poll_state_info">
	<div class="wf_state">
		<span class="iconpadding icon ${wf_state}">
        ${api.tstring(wf_state.title())}
        </span>
	</div>
    <div tal:condition="wf_state not in ('ongoing', )" class="iconpadding icon time start" i18n:translate="">The poll starts
        <span tal:replace="api.dt_util.dt_format(poll.start_time)" i18n:name="start_time" />
    </div>
    <div class="iconpadding icon time end" i18n:translate="">The poll ends
        <span tal:replace="api.dt_util.dt_format(poll.end_time)" i18n:name="end_time" />
    </div>
    <div class="clear"><!-- --></div>
</div>

</tal:main>