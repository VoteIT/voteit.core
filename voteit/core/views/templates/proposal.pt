<tal:main xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="voteit.core">

<div tal:define="unread api.is_brain_unread(brain);
                 state_id brain['workflow_state'];
                 css_class 'listing_block wf-state-%s' % state_id;"
     tal:attributes="class unread and 'unread %s' % css_class or css_class;
                     name brain['name'];
                     id brain['uid'];">

    <span tal:condition="api.show_moderator_actions" tal:replace="structure api.get_moderator_actions(brain)">
         Cogwheel menu
    </span>	

    <tal:creators tal:replace="structure api.get_creators_info(brain['creators'])">Creators</tal:creators>:
    <span class="body" tal:content="structure brain['title']">Title</span>

    <div class="meta">
        <span class="${state_id} icon iconpadding"
              tal:content="translated_state_title(state_id)">private</span>
        <span class="hyphen">&#45;</span>
        <span class="time" tal:content="api.dt_util.relative_time_format(brain['created'])"></span>
        <span class="hyphen">&#45;</span>
        <span tal:condition="show_retract(brain)">
            <a class="retract confirm-retract"
               tal:attributes="href '%s%s/@@state?state=retracted' % (request.application_url, brain['path'])"
               i18n:translate="">Retract</a>
            <span class="hyphen">&#45;</span>
        </span>
        <span class="user_tags" 
        	tal:condition="show_user_tags" 
        	tal:content="structure api.render_view_group(brain, request, 'user_tags')"></span>
    	<tal:tags condition="api.meeting.get_field_value('tags_enabled', True)">
            <span class="hyphen">&#45;</span>
	            <a class="answer" 
	               tal:attributes="href '%s%s/@@answer' % (request.application_url, brain['path'])"
	               i18n:translate="">Comment</a>
            <span class="hyphen">&#45;</span>
            <span class="aid">
            	<a class="tag" 
            	   tal:attributes="href '?tag=%s' % brain['aid']" 
            	   tal:content="'#%s' % brain['aid']">Autotag</a></span>
    	   </tal:tags>
    </div>
    <div class="clear"><!-- --></div>
</div>

</tal:main>
