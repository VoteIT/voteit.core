<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="api.main_template.macros['master']"
	  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	  i18n:domain="voteit.core">
<body>

    <div id="polls" metal:fill-slot="top_content">

        <div class="description" tal:condition="context.description" tal:content="structure context.description">Description</div>

        <div class="moderator-help-buttons"
		     tal:condition="api.show_moderator_actions and api.context_has_permission('Add Poll', context)">
            <a class="buttonize large" tal:attributes="href api.resource_url(context, request) + '@@add?content_type=Poll'">
            	<span i18n:translate="">Add poll</span>
			</a>
        </div>
        <h2 tal:condition="polls"><span class="iconpadding icon poll" i18n:translate="">Poll</span></h2>

        <span tal:replace="structure get_polls(polls, poll_forms)">Render poll listing</span>

    </div> <!-- top_content -->

    <div metal:fill-slot="content" id="content">
       <tal:columns replace="structure ai_columns">Columns</tal:columns>
    </div>

</body>
</html>
