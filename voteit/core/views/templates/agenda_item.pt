<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="load: ${api.template_dir}content.pt"
	  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	  i18n:domain="voteit.core">
<body>

    <div id="polls" metal:fill-slot="top_content">

        <div class="description" tal:condition="context.description" tal:content="structure context.description">Description</div>
        <div class="tag_stats content_wrapper" tal:replace="structure api.render_single_view_component(context, request, 'main', 'tag_stats')">Tag stats</div>

    </div> <!-- top_content -->

    <div metal:fill-slot="content" id="content">
       <tal:columns replace="structure ai_columns">Columns</tal:columns>
    </div>

</body>
</html>
