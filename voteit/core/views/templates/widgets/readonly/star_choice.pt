<tal:main
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="voteit.core"
    tal:define="api field.widget.api;">
<div id="${field.oid}" class="deformSet starwidget col-65-35">
    <input type="hidden" name="__start__" value="${field.name}:rename"/>
    <div class="column column-1">
		<tal:proposal 
			replace="structure api.render_single_view_component(api.context, api.request, 'proposal', 'block', brain=field.widget.proposal, show_user_tags=False)">
	    	Proposal
	    </tal:proposal>
	</div>
    <div class="column column-2">
	    <tal:loop tal:repeat="choice field.widget.values">
	        <input tal:attributes="checked choice[0] == cstruct;
	                             class string:${field.widget.css_class}"
	             type="radio"
	             name="${field.oid}"
	             title="${choice[1]}"
	             value="${choice[0]}"
	             id="${field.oid}-${repeat.choice.index}"
	             disabled="disabled" />
	    </tal:loop>
    </div>
    <input type="hidden" name="__end__"/>
	<div class="clear"><!-- --></div>
</div>
<script type="text/javascript">
	deform.addCallback('${field.oid}', function(oid) {
        $('#'+oid).find('input[type="radio"]').rating();
    });
</script>
</tal:main>
