<div class="deformSet" id="${field.oid}"> 
    <input type="hidden" name="__start__" value="${field.name}:rename"/>
    <tal:loop tal:repeat="choice field.widget.values">
      <input tal:attributes="checked value == cstruct;
                             class string:${field.widget.css_class} star"
             type="radio"
             name="${field.oid}"
             value="${choice[0]}"
             id="${field.oid}-${repeat.choice.index}"/>
    </tal:loop>
    <input type="hidden" name="__end__"/>
</div>
<script type="text/javascript">
    if(deform) {
        deform.addCallback('${field.oid}', function(oid) {
            // unless we set rating on the input explicitly it its not possbile to set readOnly on it
            $('#'+oid).find('input.star').rating();
            $('#'+oid).find('input.star').rating('readOnly',true);
        });
    }
</script>
