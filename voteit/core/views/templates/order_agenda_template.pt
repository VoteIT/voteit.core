<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="api.main_template.macros['master']"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="voteit.core">
<body>

	<metal:head fill-slot="head">
	    <script type="text/javascript">
	        $(document).ready(function(){
	            $('#agenda-items').sortable();
	        });
	    </script>
	</metal:head>

	<div metal:fill-slot="content" class="content_wrapper">

	    <form method="post" class="deform agenda-item-sort">
	        <fieldset>
	            <ul>
	                <li>
	                    <ul id="agenda-items">
	                        <li tal:repeat="agenda_item api.context.get_field_value('agenda_items', ())">
	                            <input type="hidden" name="agenda_items" value="${repeat.agenda_item.index}" />${agenda_item.title}
	                        </li>
	                    </ul>
	                </li>
	                <li class="buttons">
	                    <button id="deformsave" name="save" type="submit" class="btnText submit" value="save"><span i18n:translate="">Save</span></button>
	                    <button id="deformcancel" name="cancel" type="submit" class="btnText submit" value="cancel"><span i18n:translate="">Cancel</span></button>
	                </li>
	            </ul>
	        </fieldset>
	    </form>
	</div>
</body>
</html>

