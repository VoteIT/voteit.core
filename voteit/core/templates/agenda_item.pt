<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="view.macro('arche:templates/base_view.pt', 'arche:templates/inline.pt')"
      i18n:domain="voteit.core">
<body>
<div metal:fill-slot="main-content">
    <img tal:replace="structure view.thumb_tag(context, 'col-2', extra_cls = 'pull-right')" />
  
    <div class="page-header">
      <h1>${context.title}</h1>
    </div>

    <div class="row"
      tal:define="previous_ai view.previous_ai();
                  next_ai view.next_ai();">
      <div class="col-xs-6">
        <a tal:condition="previous_ai"
          class="btn btn-default btn-sm"
          href="${request.resource_url(previous_ai)}"
          title="${previous_ai.title}">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span i18n:translate="">Previous</span>
        </a>
      </div>
      <div class="col-xs-6 text-right">
        <a tal:condition="next_ai"
          class="btn btn-default btn-sm"
          href="${request.resource_url(next_ai)}"
          title="${next_ai.title}">
          <span i18n:translate="">Next</span>
          <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
      </div>
    </div>

    <p class="description lead"
         tal:define="description context.description|None"
         tal:content="structure description">Description text</p>
    <div class="body"
         tal:define="body context.body|None"
         tal:condition="body"
         tal:content="structure body">Body text</div>
    <div class="clearfix"><!-- --></div>

    <div class="portlets-ai row">
        <tal:portlets repeat="portlet view.render_portlet_slot('agenda_item')">
            <tal:portlet replace="structure portlet" />
        </tal:portlets>
    </div>


</div>
</body>
</html>
