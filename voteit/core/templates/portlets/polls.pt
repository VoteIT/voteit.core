<tal:main xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="voteit.core">
<div id="ai-polls" class="col-sm-12">
  <div class="list-group">
    <div class="list-group-item">
      <h3>
        <span class="glyphicon glyphicon-check"></span>
        <span i18n:translate="">Polls</span>
      </h3>
    </div>
    <div data-load-target="${load_url}">
      <div class="list-group-item">
        <span class="glyphicon glyphicon-refresh rotate-me"></span>
        Loading...
      </div>
    </div>
    <div class="well" tal:condition="request.is_moderator and request.has_permission('Add Poll')">
      <a href="${request.resource_url(context, 'add', query = {'content_type': 'Poll'})}"
        class="btn btn-primary"
        i18n:translate="">Add Poll</a>
    </div>
  </div>
</div>
</tal:main>
