<tal:main xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="voteit.core">

    <div i18n:translate="granted_roles_immediate_ap_explanation">
        This is a meeting where anyone can request access.
        The roles below will be granted immediately to your user if your request access to the meeting.
    </div>

    <h3 i18n:translate="">Granted roles</h3>
    <ul tal:condition="granted_roles">
        <li tal:repeat="grole granted_roles" tal:content="grole">Role</li>
    </ul>

    <div tal:condition="not granted_roles" i18n:translate="">No roles selected</div>

    <div tal:content="structure form"></div>
    
</tal:main>
